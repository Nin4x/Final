{
  "ConnectionStrings": {
    "Default": "Data Source=loanapi.db"
  },
  "Jwt": {
    "Issuer": "LoanApi",
    "Audience": "LoanApiClients",
    "SigningKey": "ChangeThisSigningKeyToAStrongValue",
    "ExpiryMinutes": 120
  },
  "Seed": {
    "AccountantUsername": "accountant",
    "AccountantEmail": "accountant@loanapi.local",
    "AccountantPassword": "ChangeMe123!"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ]
  },
  "AllowedHosts": "*"
}
